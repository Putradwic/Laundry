<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".laundry">

    <TextView
        android:id="@+id/tvsambutan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:text="Selamat Pagi, Putra"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvtanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvsambutan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:text="08 Januari 2025"
        android:textSize="16sp"
        android:textAlignment="textEnd"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardlayananutama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvtanggal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutestimasi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/tvestimasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimasi Hari Ini"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/tvnominalestimasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 50.000,-"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvestimasi"
                android:rowCount="1"
                android:columnCount="3"
                android:layout_marginVertical="15dp">

                <LinearLayout
                    android:id="@+id/layouttransaksi"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:src="@drawable/transaksi"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Transaksi"
                        android:textSize="16dp"
                        android:textAlignment="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:src="@drawable/pelanggan"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Pelanggan"
                        android:textSize="16dp"
                        android:textAlignment="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:src="@drawable/laporan"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Laporan"
                        android:textSize="16dp"
                        android:textAlignment="center"/>
                </LinearLayout>

            </GridLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvslogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siap melayani pelanggan dengan setulus hati"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@id/cardlayananutama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvkomitmen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jangan Kecewakan Pelanggan"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvslogan"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardakun"
        android:layout_width="113dp"
        android:layout_height="125dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvkomitmen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardlayanan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/akun"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Akun"
                android:textSize="16dp"
                android:textAlignment="center" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardlayanan"
        android:layout_width="113dp"
        android:layout_height="125dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvkomitmen"
        app:layout_constraintStart_toEndOf="@id/cardakun"
        app:layout_constraintEnd_toStartOf="@id/cardtambahan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/layanan"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Layanan"
                android:textSize="16dp"
                android:textAlignment="center" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardtambahan"
        android:layout_width="113dp"
        android:layout_height="125dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvkomitmen"
        app:layout_constraintStart_toEndOf="@id/cardlayanan"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/tambahan"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambahan"
                android:textSize="16dp"
                android:textAlignment="center" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardpegawai"
        android:layout_width="113dp"
        android:layout_height="125dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginVertical="15dp"
        app:layout_constraintTop_toBottomOf="@id/cardakun"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardlayanan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/pegawai"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pegawai"
                android:textSize="16dp"
                android:textAlignment="center" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardcabang"
        android:layout_width="113dp"
        android:layout_height="125dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@id/cardlayanan"
        app:layout_constraintStart_toEndOf="@id/cardpegawai"
        app:layout_constraintEnd_toStartOf="@id/cardprinter">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/cabang"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cabang"
                android:textSize="16dp"
                android:textAlignment="center" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardprinter"
        android:layout_width="113dp"
        android:layout_height="125dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginVertical="15dp"
        app:layout_constraintTop_toBottomOf="@id/cardtambahan"
        app:layout_constraintStart_toEndOf="@id/cardcabang"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/printer"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Printer"
                android:textSize="16dp"
                android:textAlignment="center" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
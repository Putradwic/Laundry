<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layanan.tambah_layanan">

    <TextView
        android:id="@+id/tvjudul_tambah_layanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TAMBAH LAYANAN"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvnama_tambah_layanan"/>

    <TextView
        android:id="@+id/tvnama_tambah_layanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama Layanan"
        android:textSize="18sp"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintTop_toBottomOf="@id/tvjudul_tambah_layanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etnama_tambah_layanan"/>

    <EditText
        android:id="@+id/etnama_tambah_layanan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nama Layanan"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintTop_toBottomOf="@id/tvnama_tambah_layanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvkategori_tambah_layanan"/>

    <TextView
        android:id="@+id/tvkategori_tambah_layanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kategori"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintTop_toBottomOf="@id/etnama_tambah_layanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etkategori_tambah_layanan"/>

    <EditText
        android:id="@+id/etkategori_tambah_layanan"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Kategori"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintTop_toBottomOf="@id/tvkategori_tambah_layanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvdeskripsi_tambah_layanan"/>

    <TextView
        android:id="@+id/tvdeskripsi_tambah_layanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Deskripsi"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintTop_toBottomOf="@id/etkategori_tambah_layanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etdeskripsi_tambah_layanan"/>

    <EditText
        android:id="@+id/etdeskripsi_tambah_layanan"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="35dp"
        android:hint="Deskripsi"
        app:layout_constraintBottom_toTopOf="@id/bttambah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvdeskripsi_tambah_layanan" />



    <Button
        android:id="@+id/bttambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@id/etdeskripsi_tambah_layanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
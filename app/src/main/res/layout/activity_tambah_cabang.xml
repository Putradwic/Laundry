<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cabang.tambah_cabang">

    <TextView
        android:id="@+id/tvjudul_tambah_cabang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TAMBAH CABANG"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvnama_tambah_cabang"/>

    <TextView
        android:id="@+id/tvnama_tambah_cabang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama Cabang"
        android:textSize="18sp"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintTop_toBottomOf="@id/tvjudul_tambah_cabang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etnama_tambah_cabang"
        />

    <EditText
        android:id="@+id/etnama_tambah_cabang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nama Cabang"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintTop_toBottomOf="@id/tvnama_tambah_cabang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvstatus_tambah_cabang"/>

    <TextView
        android:id="@+id/tvstatus_tambah_cabang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintTop_toBottomOf="@id/etnama_tambah_cabang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etstatus_tambah_cabang"/>

    <EditText
        android:id="@+id/etstatus_tambah_cabang"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Status"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintTop_toBottomOf="@id/tvstatus_tambah_cabang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvlokasi_tambah_cabang"/>

    <TextView
        android:id="@+id/tvlokasi_tambah_cabang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lokasi Cabang"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintTop_toBottomOf="@id/etstatus_tambah_cabang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etlokasi_tambah_cabang"/>

    <EditText
        android:id="@+id/etlokasi_tambah_cabang"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="35dp"
        android:hint="Lokasi Cabang"
        app:layout_constraintBottom_toTopOf="@id/bttambah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvlokasi_tambah_cabang" />




    <Button
        android:id="@+id/bttambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@id/etlokasi_tambah_cabang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>